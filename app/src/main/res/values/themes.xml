<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== TEMA BASE ==================== -->
    <style name="Theme.GestionUrretaUsuario" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_card</item>

        <!-- Colores de error -->
        <item name="colorError">@color/status_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar y navigation bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>

        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/ripple_color</item>
    </style>

    <!-- ==================== VARIANTES DE TEMA ==================== -->
    <style name="Theme.GestionUrretaUsuario.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GestionUrretaUsuario.Auth" parent="Theme.GestionUrretaUsuario">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="Theme.GestionUrretaUsuario.Splash" parent="Theme.GestionUrretaUsuario">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- ==================== TOOLBAR ==================== -->
    <style name="Theme.GestionUrretaUsuario.Toolbar">
        <item name="android:background">@color/background_dark</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>

    <!-- ==================== CARDS ==================== -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardStyleElevated" parent="CardStyle">
        <item name="cardBackgroundColor">@color/background_surface</item>
    </style>

    <!-- ==================== BOTONES ==================== -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ==================== INPUTS ==================== -->
    <style name="InputFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
    </style>

    <!-- Alias para compatibilidad -->
    <style name="TextInputStyle" parent="InputFieldStyle" />

    <!-- ==================== DIALOGS ==================== -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- ==================== TEXT APPEARANCES ==================== -->
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.Headline1" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_headline1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_headline2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.Label" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>