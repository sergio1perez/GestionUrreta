<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_dark"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    android:layout_margin="@dimen/spacing_sm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/iv_producto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@color/surface_dark"
            tools:src="@drawable/ic_tienda"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Badge de descuento o nuevo -->
        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_sm"
            android:background="@drawable/bg_badge_primary"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_caption"
            android:fontFamily="@font/poppins_semibold"
            android:visibility="gone"
            tools:text="NUEVO"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_md"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Dobok WT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_producto" />

        <!-- Descripción breve -->
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_body_small"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Uniforme oficial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre" />

        <!-- Precio y botón -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_md"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Precio -->
            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_body"
                android:fontFamily="@font/poppins_bold"
                tools:text="$45.00" />

            <!-- Botón agregar -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_agregar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                app:fabCustomSize="40dp"
                app:tint="@color/white"
                app:backgroundTint="@color/primary"
                app:elevation="0dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
