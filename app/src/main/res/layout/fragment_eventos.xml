<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Chips de categorías -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="@dimen/spacing_md">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/screen_padding_horizontal"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_todos"
                    style="@style/CategoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_all"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_torneos"
                    style="@style/CategoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_tournaments" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_seminarios"
                    style="@style/CategoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_seminars" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_examenes"
                    style="@style/CategoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_exams" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- RecyclerView de eventos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_eventos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/screen_padding_horizontal"
            android:clipToPadding="false"
            tools:listitem="@layout/item_evento" />

        <!-- Mensaje sin eventos -->
        <TextView
            android:id="@+id/tv_no_eventos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="No hay eventos próximos"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_body"
            android:fontFamily="@font/poppins_regular"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>