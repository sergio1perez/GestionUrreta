<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_dark"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    android:layout_marginBottom="@dimen/spacing_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_md">

        <!-- Icono de estado -->
        <ImageView
            android:id="@+id/iv_estado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_circle"
            android:padding="@dimen/spacing_sm"
            android:background="@drawable/bg_icon_circle_green"
            app:tint="@color/accent_green" />

        <!-- Info del requisito -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/spacing_md">

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_body"
                android:fontFamily="@font/poppins_semibold"
                tools:text="Poomsae: Taegeuk 3" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body_small"
                android:fontFamily="@font/poppins_regular"
                tools:text="Dominio tÃ©cnico completo" />
        </LinearLayout>

        <!-- Chevron o candado -->
        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_hint" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
