<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_dark"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    android:layout_marginBottom="@dimen/spacing_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de la noticia -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_imagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface_dark"
                tools:src="@drawable/ic_noticias" />

            <!-- Badge de categoría -->
            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="@dimen/spacing_md"
                android:background="@drawable/bg_badge_primary"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:textColor="@color/white"
                android:textSize="@dimen/text_caption"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="true"
                tools:text="COMPETICIÓN" />

        </FrameLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Tiempo -->
            <TextView
                android:id="@+id/tv_tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_caption"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                tools:text="HACE 2 HORAS" />

            <!-- Título -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_title"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="¡Oro en el Regional!" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Nuestro equipo de competición trajo a casa 5 medallas de oro y 3 de plata..." />

            <!-- Footer: likes y leer más -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_md">

                <!-- Likes -->
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/text_body_small"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="124" />

                <!-- Compartir -->
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:src="@drawable/ic_share"
                    app:tint="@color/text_tertiary" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Leer más -->
                <TextView
                    android:id="@+id/tv_leer_mas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leer más"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_body_small"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawableTint="@color/primary"
                    android:drawablePadding="@dimen/spacing_xs"
                    android:padding="@dimen/spacing_xs" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>